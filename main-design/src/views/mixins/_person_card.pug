mixin person_card(data={}, index=0)
	.card-person
		img.card-img-top(src=`${data.img}`, alt='doctor avatar')
		.card-body
			a.card-title(href="#")= `${data.name}`
			small.card-text= `${data.desc}`
			select.stars-readOnly(data-init=`${data.rating}`)
				option(value='1') 1
				option(value='2') 2
				option(value='3') 3
				option(value='4') 4
				option(value='5') 5
		.card-footer
			p.card-text
				i.fas.fa-map-marker-alt
				small= `${data.address}`